<?xml version="1.0" encoding="ISO-8859-1" ?>
    <!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
    <log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

	<!-- debug < info < warn < error < fatal -->

<!-- ### APPENDER GENERAUX ### -->

	<!-- ### Console ### -->
	<appender name="STDOUT" class="org.apache.log4j.ConsoleAppender">
            <layout class="org.apache.log4j.PatternLayout">
                <param name="ConversionPattern"
                value="%d{dd MMM HH:mm:ss} %p [%t] %c - %m%n" />
            </layout>
    </appender>
	<appender name="STDOUT-SIMPLE" class="org.apache.log4j.ConsoleAppender">
            <layout class="org.apache.log4j.PatternLayout">
                <param name="ConversionPattern"
                value="%d{dd MMM HH:mm:ss} %m%n" />
            </layout>
    </appender>

<!-- ### CATEGORY ### -->

        <category name="org.hibernate">
          <priority value="debug" />
        </category>

         <category name="org.apache.commons">
          <priority value="warn" />
        </category>

        <category name="com.sun.faces">
          <priority value="warn" />
        </category>

         <category name="org.ajax4jsf">
          <priority value="warn" />
        </category>

         <category name="org.apache.jasper">
          <priority value="warn" />
        </category>

        <category name="org.springframework">
          <priority value="warn" />
        </category>

        <category name="org.apache.myfaces">
          <priority value="warn" />
        </category>
        <category name="org.apache.velocity.app.VelocityEngine">
          <priority value="warn" />
        </category>
		
		
<!-- ### ROOT ### -->
 	<root>
       <priority value ="WARN" />
       <appender-ref ref="STDOUT"/>
    </root>

    </log4j:configuration>
